@* Admin Üst Menü - Kullanıcı dropdown içinde Profil / Parola / Çıkış *@
<nav class="app-header navbar navbar-expand bg-body">
    <div class="container-fluid">
        <!-- Sol Menü -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                    <i class="bi bi-list"></i>
                </a>
            </li>
            <li class="nav-item d-none d-md-block">
                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            </li>
        </ul>

        <!-- Sağ Menü -->
        <ul class="navbar-nav ms-auto">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <li class="nav-item dropdown user-menu">
                    <a href="#" class="nav-link dropdown-toggle d-flex align-items-center gap-2" data-bs-toggle="dropdown">
                        <img src="~/assets/img/user2-160x160.jpg" class="user-image rounded-circle shadow" alt="User" />
                        <span class="d-none d-md-inline">@User.Identity!.Name</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
                        <!-- Başlık -->
                        <li class="user-header text-bg-primary text-center">
                            <img src="~/assets/img/user2-160x160.jpg" class="rounded-circle shadow mb-2" alt="User" />
                            <p class="mb-0">@User.Identity!.Name</p>
                            <small>@DateTime.Now.ToShortDateString()</small>
                        </li>

                        <!-- Menü Kalemleri -->
                        <li>
                            <a class="dropdown-item d-flex align-items-center gap-2"
                               asp-controller="Account" asp-action="Profile">
                                <i class="bi bi-person-circle"></i> Profilim
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center gap-2"
                               asp-controller="Account" asp-action="ChangePassword">
                                <i class="bi bi-key-fill"></i> Parolayı Değiştir
                            </a>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <!-- Çıkış (POST) -->
                        <li class="px-2 pb-2">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="nav-link btn btn-link p-0">Çıkış</button>
                            </form>
                        </li>
                    </ul>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-1" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i> Giriş
                    </a>
                </li>
            }
        </ul>
    </div>
</nav>
