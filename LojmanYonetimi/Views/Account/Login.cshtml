@{
    ViewData["Title"] = "Admin Girişi";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="col-12 col-sm-10 col-md-7 col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <h4 class="mb-1">Admin Girişi</h4>
                    <p class="text-muted mb-0">Lütfen e-posta ve şifrenizi girin</p>
                </div>

                <form asp-action="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@returnUrl" />

                    @* Hatalar varsa kutuyu göster *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger py-2 small" role="alert">
                            Geçersiz kullanıcı veya şifre.
                        </div>
                    }

                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta</label>
                        <input id="email" name="email" type="email" class="form-control" placeholder="admin@site.com" required />
                    </div>

                    <div class="mb-2">
                        <label for="password" class="form-label">Şifre</label>
                        <input id="password" name="password" type="password" class="form-control" placeholder="••••••••" required />
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" />
                            <label class="form-check-label" for="rememberMe">Beni hatırla</label>
                        </div>
                        <small class="text-muted">Şifrenizi mi unuttunuz?</small>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">Giriş Yap</button>
                </form>

                <div class="text-center mt-3">
                    <small class="text-muted">Yetkisiz misafir kaydı kapalıdır.</small>
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <small class="text-muted">© @DateTime.Now.Year Lojman Yönetimi</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
